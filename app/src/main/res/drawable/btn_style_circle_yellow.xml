<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_window_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <!--漸層顏色-->
            <gradient
                android:startColor="@color/color2"
                android:centerColor="@color/color2"
                android:endColor="#fff"
                android:gradientRadius="150dp"
                android:type="radial" />
            <!--<solid android:color="#18506C" />-->

            <padding
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp"/>
            <!-- 形狀大小 -->
            <size
                android:width="100dp"
                android:height="100dp" />
            <!-- 邊框線 -->
            <stroke
                android:width="5dp"
                android:color="#FFF"
                android:dashWidth="5dp" />
            <!--android:dashGap="2dp"-->
        </shape>
    </item>
